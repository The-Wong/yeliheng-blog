<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeliheng.blogsystem.mapper.MenuMapper">
    <insert id="addMenu" parameterType="Menu" useGeneratedKeys="true" keyProperty="id">
        insert into menu(
        <if test="userId != null and userId != ''">user_id,</if>
        <if test="parentId != null and parentId != ''">paren_id,</if>
        <if test="menuName != null and menuName != ''">menu_name,</if>
        <if test="orderNum != null and orderNum != ''">order_num,</if>
        <if test="url != null and url != ''">url,</if>
        <if test="visible != null and visible != ''">visible,</if>
        <if test="permission != null and permission != ''">permission,</if>
        <if test="icon != null and icon != ''">icon,</if>
        created_at,
        updated_at
        )values (
        <if test="userId != null and userId != ''">#{userId},</if>
        <if test="parentId != null and parentId != ''">#{parentId},</if>
        <if test="menuName != null and menuName != ''">#{menuName},</if>
        <if test="orderNum != null and orderNum != ''">#{orderNum},</if>
        <if test="url != null and url != ''">#{url},</if>
        <if test="visible != null and visible != ''">#{visible},</if>
        <if test="permission != null and permission != ''">#{permission},</if>
        <if test="icon != null and icon != ''">#{icon},</if>
        sysdate(),
        sysdate()
        )
    </insert>

    <update id="updateMenu" parameterType="Menu">
        update menu
        <set>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="parentId != null and parentId != ''">paren_id = #{parentId},</if>
            <if test="menuName != null and menuName != ''">menu_name = #{menuName},</if>
            <if test="orderNum != null and orderNum != ''">order_num = #{orderNum},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="visible != null and visible != ''">visible = #{visible},</if>
            <if test="permission != null and permission != ''">permission = #{permission},</if>
            <if test="icon != null and icon != ''">icon = #{icon},</if>
            updated_at = sysdate()
        </set>
        where id = #{id}
    </update>
</mapper>