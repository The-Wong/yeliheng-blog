<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeliheng.blogsystem.mapper.CategoryMapper">
    <insert id="addCategory" parameterType="Category" useGeneratedKeys="true" keyProperty="id">
        insert into category(
        <if test="userId != null and userId != ''">user_id,</if>
        <if test="categoryName != null and categoryName != ''">category_name,</if>
        created_at,
        updated_at
        )values (
        <if test="userId != null and userId != ''">#{userId},</if>
        <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
        sysdate(),
        sysdate()
        )
    </insert>
    <update id="updateCategory" parameterType="Category">
        update category
        <set>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            updated_at = sysdate()
        </set>
        where id = #{id}
    </update>
    <select id="checkIfExistArticle" parameterType="Long" resultType="int">
        select count(1) from article where category_id = #{category_id}
    </select>
</mapper>